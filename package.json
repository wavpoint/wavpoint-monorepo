{
	"name": "wavpoint",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint",
		"format": "biome check --write ./",
		"web:clean": "cd apps/web && bun clean",
		"mobile:clean": "cd apps/mobile && bun clean",
		"landing:clean": "cd apps/landing && bun clean",
		"app:clean": "cd packages/app && bun clean",
		"clean": "git clean -xdf node_modules && rm -rf .turbo && rm -rf bun.lockb && bun web:clean && bun mobile:clean && bun app:clean && bun landing:clean"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@wavpoint/typescript-config": "*",
		"turbo": "latest"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "bun@1.1.0",
	"workspaces": ["apps/*", "packages/*"],
	"dependencies": {
		"@babel/plugin-proposal-export-namespace-from": "^7.18.9",
		"viem": "^2.16.5"
	}
}
